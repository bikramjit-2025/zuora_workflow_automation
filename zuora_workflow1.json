{
  "workflow": {
    "id": "wf_001",
    "name": "Customer Onboarding Workflow",
    "version": "1.0",
    "description": "Automated workflow for new customer onboarding process",
    "status": "active",
    "created_date": "2024-01-15T10:30:00Z",
    "last_modified": "2024-01-15T10:30:00Z",
    "triggers": [
      {
        "type": "account_created",
        "conditions": {
          "account_type": "enterprise",
          "region": "US"
        }
      }
    ],
    "steps": [
      {
        "step_id": "step_001",
        "name": "Validate Account",
        "type": "validation",
        "order": 1,
        "config": {
          "required_fields": ["company_name", "email", "phone"],
          "validation_rules": ["email_format", "phone_format"]
        }
      },
      {
        "step_id": "step_002", 
        "name": "Create Subscription",
        "type": "action",
        "order": 2,
        "config": {
          "product_catalog": "enterprise_plan",
          "billing_cycle": "monthly",
          "auto_renew": true
        }
      },
      {
        "step_id": "step_003",
        "name": "Send Welcome Email",
        "type": "notification",
        "order": 3,
        "config": {
          "template": "welcome_enterprise",
          "recipients": ["account_owner", "billing_contact"]
        }
      }
    ],
    "settings": {
      "retry_attempts": 3,
      "timeout_minutes": 30,
      "error_handling": "continue_on_error"
    }
  }
}
